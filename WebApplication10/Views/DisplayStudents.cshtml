@model IEnumerable<WebApplication10.Models.student>

<h2 class="text-center bg-success text-danger">Student Details</h2>

<table class="table table-bordered table-condensed text-center">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.FirstOrDefault().Sid)</th>
            <th>@Html.DisplayNameFor(model => model.FirstOrDefault().Name)</th>
            <th>@Html.DisplayNameFor(model => model.FirstOrDefault().Class)</th>
            <th>@Html.DisplayNameFor(model => model.FirstOrDefault().Fees)</th>
            <th>@Html.DisplayNameFor(model => model.FirstOrDefault().Photo)</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var student in Model)
        {
            <tr>
                <td>@Html.DisplayFor(model => student.Sid)</td>
                <td>@Html.DisplayFor(model => student.Name)</td>
                <td>@Html.DisplayFor(model => student.Class)</td>
                <td>@Html.DisplayFor(model => student.Fees)</td>
                <td>
                    @if (!string.IsNullOrEmpty(student.Photo))
                    {
                        <img src="@Url.Content("~/Uploads/" + student.Photo)" width="40" height="25" alt="Student Photo" />
                    }
                    else
                    {
                        <span>No Image</span>
                    }
                </td>
                <td>
                    @Html.ActionLink("View", "DisplayStudent", new { Sid = student.Sid }, new { @class = "btn btn-info btn-sm" }) |
                    @Html.ActionLink("Edit", "EditStudent", new { Sid = student.Sid }, new { @class = "btn btn-warning btn-sm" }) |
                    @Html.ActionLink(
                        "Delete",
                        "DeleteStudent",
                        new { Sid = student.Sid },
                        new
                        {
                            @class = "btn btn-danger btn-sm",
                            onclick = "return confirm('Are you sure you want to delete this record?');"
                        })
                </td>
            </tr>
        }
    </tbody>
    <tfoot>
        <tr>
            <td colspan="6">
                @Html.ActionLink("Add New Student", "AddStudent", null, new { @class = "btn btn-success" })
            </td>
        </tr>
    </tfoot>
</table>
